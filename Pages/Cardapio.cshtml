@page
@model SaborGregoNew.Pages.CardapioModel

@{ 
    ViewData["Title"] = "Cardápio";
}

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Nosso Cardápio</h1>
    <p>Conheça as delícias que preparamos para você!</p>
</div>

<div class="row">
    @foreach (var produto in Model.Produtos)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produto.ImagemUrl" class="card-img-top" alt="@produto.Nome">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p class="card-text"><strong>Preço:</strong> @produto.Preco.ToString("C")</p>
                    <p class="card-text"><small class="text-muted">Categoria: @produto.Categoria</small></p>
                    <button type="button" class="btn btn-primary mt-auto" onclick="handleAddToCart(event, '@produto.Nome', @produto.Preco)">Adicionar ao Carrinho</button>
                </div>
            </div>
        </div>
    }
</div>
